<% if !user_signed_in? %>
  <div class="jumbotron jumbotron-fluid">
    <h1>Movie Reviews!</h1>
    <p>Start Adding Movies!</p>
    <p><%= link_to "Sign Up To Write A Review", new_user_registration_path, class: "btn btn-primary btn-lg" %></p>
  </div>
<% end %>
<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <% @movies.each do |movie| %>
        <div class="col-sm-6 col-md-3">
            <div class="thumbnail">
              <% if movie.image.attached?  %>
              <center><%= link_to (image_tag movie.image, class: 'image', size: "250x400"), movie %></center>
              <% else %>
                <center><%= link_to (image_tag url_for("http://motivatevalmorgan.com/wp-content/uploads/2016/06/default-movie-1-3.jpg"), class: 'image', size: "250x400"), movie %></center>
              <% end %>
              <h3>
                <center><%= link_to movie.title, movie, class: "btn btn-primary" %></center>
              </h3>
            </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
