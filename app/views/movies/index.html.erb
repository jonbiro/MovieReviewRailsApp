<% if !user_signed_in? %>
  <div class="jumbotron jumbotron-fluid">
    <h1>Movies Reviews!</h1>
    <p>Start Adding Movies!</p>
    <p><%= link_to "Sign Up To Write A Review", new_user_registration_path, class: "btn btn-primary btn-lg" %></p>
  </div>
<% end %>
<div class="panel panel-default">
	  <div class="panel-body">
<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-sm-6 col-md-3">

      <% if movie.image.attached?  %>
	       <div class="thumbnail">
	      <center><%= link_to (image_tag movie.image, class: 'image'), movie %></center>
        <h3><center><%= link_to movie.title, movie, class: "btn btn-primary" %></center></h3>
        <% else %>
        <div class="thumbnail">

        <center><%= link_to (image_tag url_for("https://www.movieinsider.com/images//none_175px.jpg"), class: 'image'), movie  %></center>
        <h3><center><%= link_to movie.title, movie, class: "btn btn-primary" %></center></h3>
        <% end %>
	  </div>
    </div>
  <% end %>
</div>
</div>
</div>
